{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2017",
    "inlineSourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "declaration": true,
    "sourceRoot": "src",
    "outDir": "lib"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src"
  ],
}